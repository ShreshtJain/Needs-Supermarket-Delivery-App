<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="8dp">
<androidx.cardview.widget.CardView
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="8dp">
            <LinearLayout
                android:id="@+id/site_listing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:elevation="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:clickable="false"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="top|left"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="center"
                            android:baselineAlignBottom="false"
                            android:src="@drawable/needs_logo" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/text_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/site_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:maxWidth="170dp"
                                android:singleLine="true"
                                android:text="Pepsi "
                                android:textAppearance="?android:attr/textAppearanceListItem"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/site_edit_button"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:layout_gravity="right"
                                android:layout_margin="3dp"
                                android:background="@drawable/button_white"
                                android:drawableLeft="@drawable/motorcycle"
                                android:drawablePadding="8dp"
                                android:drawableTint="@color/blue"
                                android:elevation="4dp"
                                android:gravity="center"
                                android:paddingLeft="4dp"
                                android:paddingTop="6dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="6dp"
                                android:text="START"
                                android:textColor="@color/blue"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/shop_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="false"
                                    android:text="Billboard is available in delhi market and NCR market"
                                    android:textColor="@color/textColorPrimary"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/dash_image_upload_bg"
                android:orientation="vertical"
                android:paddingBottom="16dp">
                <TextView
                    android:id="@+id/total_booking_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="22dp"
                    android:gravity="center"
                    android:text="â‚¹ 2000"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="48dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mode_of_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PAYMENT MODE"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="14dp" />
            </LinearLayout>
        <TextView
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:layout_margin="3dp"
            android:background="@drawable/button_white"
            android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
            android:drawablePadding="8dp"
            android:drawableTint="@color/blue"
            android:elevation="4dp"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingTop="6dp"
            android:paddingRight="8dp"
            android:paddingBottom="6dp"
            android:text="UPDATE"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cart_products_recycler"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>