<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/text_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/stringActivityDocUploadHeading"
            android:textColor="@color/textColorPrimary"
            android:textSize="36dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/stringActivityDocUploadSubHeading"
            android:textColor="@color/textColorSecondry"
            android:textSize="10sp" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="8dp">


            <RelativeLayout
                android:id="@+id/activity_Login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:id="@+id/email_login_form"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/edit_text_line"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/stringEditTextHeadingFullName"
                                    android:textAllCaps="true"
                                    android:textColor="@color/textColorPrimary"
                                    android:textSize="@dimen/edit_text_heading_size"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/reg_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:background="@color/colorTransparent"
                                    android:hint="@string/stringEditTextDescriptionFullName"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:paddingTop="8dp"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="8dp"
                                    android:singleLine="true"
                                    android:textSize="@dimen/edit_text_hint_size" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="4dp"-->
                    <!--android:drawableLeft="@drawable/ic_placeholder"-->
                    <!--android:drawablePadding="@dimen/text_view_drawable_padding"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:paddingTop="8dp"-->
                    <!--android:paddingBottom="8dp"-->
                    <!--android:text="@string/stringTextViewTagAddressDetails"-->
                    <!--android:textAllCaps="true"-->
                    <!--android:textColor="@color/textColorSecondry"-->
                    <!--android:textSize="14sp" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/edit_text_line"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="@string/stringEditTextHeadingAddressFirst"
                                    android:textAllCaps="true"
                                    android:textColor="@color/textColorPrimary"
                                    android:textSize="@dimen/edit_text_heading_size"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/reg_address_line_first"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:background="@color/colorTransparent"
                                    android:hint="@string/stringEditTextDescriptionAddress"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:paddingTop="8dp"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="8dp"
                                    android:singleLine="true"
                                    android:textSize="@dimen/edit_text_hint_size" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/edit_text_line"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="@string/stringEditTextHeadingAddressSecond"
                                    android:textAllCaps="true"
                                    android:textColor="@color/textColorPrimary"
                                    android:textSize="@dimen/edit_text_heading_size"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/reg_address_line_second"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:background="@color/colorTransparent"
                                    android:hint="@string/stringEditTextDescriptionAddress"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:paddingTop="8dp"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="8dp"
                                    android:singleLine="true"
                                    android:textSize="@dimen/edit_text_hint_size" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginRight="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/edit_text_line"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="top"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="12dp"
                                        android:text="@string/stringEditTextHeadingCityTown"
                                        android:textAllCaps="true"
                                        android:textColor="@color/textColorPrimary"
                                        android:textSize="@dimen/edit_text_heading_size"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/reg_city"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="1dp"
                                        android:background="@color/colorTransparent"
                                        android:hint="@string/stringEditTextDescriptionCityTown"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:paddingTop="8dp"
                                        android:paddingRight="16dp"
                                        android:paddingBottom="8dp"
                                        android:singleLine="true"
                                        android:textSize="@dimen/edit_text_hint_size" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginRight="6dp"
                                android:layout_weight="1"
                                android:background="@drawable/edit_text_line"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="top"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="12dp"
                                        android:text="@string/stringEditTextHeadingState"
                                        android:textAllCaps="true"
                                        android:textColor="@color/textColorPrimary"
                                        android:textSize="@dimen/edit_text_heading_size"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/reg_state"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="1dp"
                                        android:background="@color/colorTransparent"
                                        android:hint="@string/stringEditTextDescriptionState"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:paddingTop="8dp"
                                        android:paddingRight="16dp"
                                        android:paddingBottom="8dp"
                                        android:singleLine="true"
                                        android:textSize="@dimen/edit_text_hint_size" />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/edit_text_line"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:orientation="vertical"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="@string/stringEditTextHeadingPinCode"
                                    android:textAllCaps="true"
                                    android:textColor="@color/textColorPrimary"
                                    android:textSize="@dimen/edit_text_heading_size"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/reg_address_pin_code"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:background="@color/colorTransparent"
                                    android:hint="@string/stringEditTextDescriptionPinCode"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:paddingTop="8dp"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="8dp"
                                    android:singleLine="true"
                                    android:textSize="@dimen/edit_text_hint_size" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/profile_image_upload_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbar_holder"
                    android:background="@drawable/profile_edit_text_bg"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image_user"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_docs" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1.4"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|fill_vertical"
                            android:text="Upload Profile Image"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_image_upload_bg"
                            android:padding="6dp"
                            android:rotation="90"
                            android:src="@drawable/ic_left_arrow" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/driving_licence_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbar_holder"
                    android:background="@drawable/profile_edit_text_bg"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/driving_licence_image"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_docs" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1.4"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/profile_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|fill_vertical"
                            android:text="Driving Licence Image"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_image_upload_bg"
                            android:padding="6dp"
                            android:rotation="90"
                            android:src="@drawable/ic_left_arrow" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/aadhar_card_image_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbar_holder"
                    android:background="@drawable/profile_edit_text_bg"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/aadhar_licence_image"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ic_docs" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1.4"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|fill_vertical"
                            android:text="Aadhar Card Image"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center"
                            android:background="@drawable/dash_image_upload_bg"
                            android:padding="6dp"
                            android:rotation="90"
                            android:src="@drawable/ic_left_arrow" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/button_blue_hollow"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/upload_button"
                        style="?android:textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorTransparent"
                        android:text="Update profile"
                        android:textColor="@color/blue"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="4.5"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/login_progress"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_blue"
                        android:gravity="center"
                        android:padding="12dp"
                        android:visibility="gone">

                        <ProgressBar
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_blue"
                        android:padding="8dp"
                        android:rotation="180"
                        android:src="@drawable/ic_left_arrow"
                        android:tint="@color/white"
                        android:translationZ="4dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>