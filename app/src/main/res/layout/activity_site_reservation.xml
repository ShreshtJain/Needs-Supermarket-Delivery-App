<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context="com.deliverykreani.activity.authentication.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_Login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <!-- LoginActivity progress -->

            <LinearLayout
                android:id="@+id/text_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp">

                <FrameLayout
                    android:id="@+id/custom_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="0dp"
                        android:gravity="left"
                        android:text="@string/stringReservationHeading"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="56dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="left"
                        android:text="@string/stringReservationMessage"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/close_button"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_gravity="right"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_white"
                        android:elevation="4dp"
                        android:padding="12dp"
                        android:tint="@color/textColorPrimary"
                        app:srcCompat="@drawable/ic_close_black_24dp"
                        tools:ignore="VectorDrawableCompat" />

                </FrameLayout>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/text_holder"
                android:layout_margin="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="42dp"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="54dp">

                    <LinearLayout
                        android:id="@+id/update_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@color/windowBackground"
                        android:clickable="true"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:clickable="false"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="-12dp"
                                android:fontFamily="@font/roboto"
                                android:text="START DATE"
                                android:textAllCaps="true"
                                android:textColor="@color/textColorSecondry"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/dd_start"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="left"
                                        android:text="--"
                                        android:textAllCaps="true"
                                        android:textColor="@color/textColorPrimary"
                                        android:textSize="52sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/mm_yy_start"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="-- --"
                                        android:textAllCaps="true"
                                        android:textColor="@color/textColorPrimary"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/day_start"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="---"
                                        android:textAllCaps="true"
                                        android:textColor="@color/textColorSecondry"
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:clickable="false"
                            android:orientation="vertical"
                            android:paddingLeft="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="-12dp"
                                android:fontFamily="@font/roboto"
                                android:text="END DATE"
                                android:textAllCaps="true"
                                android:textColor="@color/textColorSecondry"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/dd_end"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="left"
                                        android:text="--"
                                        android:textAllCaps="true"
                                        android:textColor="@color/textColorPrimary"
                                        android:textSize="52sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/mm_yy_end"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="-- --"
                                        android:textAllCaps="true"
                                        android:textColor="@color/textColorPrimary"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/day_end"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="--"
                                        android:textAllCaps="true"
                                        android:textColor="@color/textColorSecondry"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/cate_divider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/edit_text_line"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="@string/stringActivityBrandHeading"
                                android:textAllCaps="true"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="@dimen/edit_text_heading_size"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/reg_safe_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:background="@color/colorTransparent"
                                android:hint="@string/stringActivityBrandPlaceholder"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingTop="8dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="8dp"
                                android:singleLine="true"
                                android:textSize="@dimen/edit_text_hint_size" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/edit_text_line"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="@string/stringActivityCommentHeading"
                                android:textAllCaps="true"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="@dimen/edit_text_heading_size"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/comment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:background="@color/colorTransparent"
                                android:hint="@string/stringActivityCommentPlaceholder"
                                android:inputType="text"
                                android:paddingTop="8dp"
                                android:paddingRight="16dp"
                                android:paddingBottom="8dp"
                                android:singleLine="true"
                                android:textSize="@dimen/edit_text_hint_size" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="72dp"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/button_blue_hollow"
                        android:orientation="horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="26dp"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <Button
                                android:id="@+id/status_update_button"
                                style="?android:textAppearanceSmall"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorTransparent"
                                android:text="@string/stringReservationButton"
                                android:textColor="@color/blue"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="4.5"
                            android:gravity="center_vertical|center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/login_progress"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:background="@drawable/button_blue"
                                android:gravity="center"
                                android:padding="12dp"
                                android:visibility="gone">

                                <ProgressBar
                                    style="?android:attr/progressBarStyleLarge"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/arrow"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:background="@drawable/button_blue"
                                android:padding="8dp"
                                android:rotation="180"
                                android:src="@drawable/ic_keyboard_backspace_black_24dp"
                                android:tint="@color/white"
                                android:translationZ="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>